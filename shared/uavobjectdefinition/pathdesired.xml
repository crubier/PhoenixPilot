<?xml version="1.0"?>
<xml>
  <object name="PathDesired" singleinstance="true" settings="false">
    <meta>
      <description>The endpoint or path the craft is trying to achieve.  Can come from @ref ManualControl or @ref PathPlanner </description>
      <access gcs="readwrite" flight="readwrite"/>
      <telemetrygcs acked="false" updatemode="manual" period="0"/>
      <telemetryflight acked="false" updatemode="throttled" period="1000"/>
      <logging updatemode="onchange" period="0"/>
    </meta>
    <data>
      <data name="Start" units="m" type="float" elementnames="North,East,Down" default="0"/>
      <data name="End" units="m" type="float" elementnames="North,East,Down" default="0"/>
      <data name="StartingVelocity" units="m/s" type="float" elements="1" default="0"/>
      <data name="EndingVelocity" units="m/s" type="float" elements="1" default="0"/>

      <!-- Endpoint mode - move directly towards endpoint regardless of position -->
      <!-- Straight Mode - move across linear path through Start towards the waypoint end, adjusting velocity - continue straight -->
      <!-- Circle Mode - move a circular pattern around End with radius End-Start (straight line in the vertical)-->
      <data name="Mode" units="" type="enum" elements="1" options="FlyEndpoint,FlyVector,FlyCircleRight,FlyCircleLeft,DriveEndpoint,DriveVector,DriveCircleLeft,DriveCircleRight,HoldPosition,CirclePositionLeft,CirclePositionRight,Land" default="FlyVector"/>
      <data name="ModeParameters" units="" type="float" elements="1" default="0"/>
    </data>
  </object>
</xml>
